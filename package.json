{
	"name": "goblin",
	"version": "2.0.0",
	"private": true,
	"description": "A custom Clash of Clans bot for EYG Family of Clans",
	"license": "MPL-2.0",
	"author": "r-priyam <roy_priyam@outlook.com>",
	"type": "module",
	"imports": {
		"#root/*": "./dist/*.js",
		"#lib/*": "./dist/lib/*.js",
		"#lib/coc": "./dist/lib/coc/index.js",
		"#utils/*": "./dist/lib/util/*.js"
	},
	"main": "dist/goblin.js",
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch --onSuccess \"yarn start\"",
		"format": "prettier --write . && eslint src --ext ts --fix --format=pretty",
		"postinstall": "husky install .github/husky",
		"lint": "prettier --check . && eslint src --ext ts --format=pretty",
		"migrate": "node scripts/dbMigration.mjs",
		"migrate:new": "ley new $0 --timestamp --esm",
		"release": "cliff-jumper",
		"release:test": "cliff-jumper --dry-run",
		"start": "node --enable-source-maps dist/goblin.js",
		"sync-docker": "node scripts/syncDocker.mjs",
		"typecheck": "tsc -b src",
		"update": "yarn upgrade-interactive",
		"watch": "tsup --watch"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": [
			"prettier --write --loglevel=warn \"src/**/*.ts\"",
			"eslint --fix --ext mjs,js,ts"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"resolutions": {
		"minimist": "^1.2.7"
	},
	"dependencies": {
		"@discordjs/rest": "^1.5.0",
		"@ltd/j-toml": "^1.38.0",
		"@sapphire/cron": "^1.0.0",
		"@sapphire/decorators": "^6.0.0",
		"@sapphire/discord.js-utilities": "^6.0.1",
		"@sapphire/framework": "4.0.2",
		"@sapphire/plugin-logger": "3.0.1",
		"@sapphire/plugin-scheduled-tasks": "6.0.0",
		"@sapphire/plugin-subcommands": "4.0.0",
		"@sapphire/stopwatch": "^1.5.0",
		"@sapphire/type": "^2.3.0",
		"@sapphire/utilities": "^3.11.0",
		"@sentry/node": "^7.36.0",
		"@skyra/env-utilities": "^1.1.0",
		"bufferutil": "^4.0.7",
		"bullmq": "^3.6.2",
		"clashofclans.js": "3.0.2",
		"colorette": "^2.0.19",
		"discord-api-types": "^0.37.31",
		"discord.js": "^14.7.1",
		"figlet": "^1.5.2",
		"fuse.js": "^6.6.2",
		"gradient-string": "^2.0.2",
		"ioredis": "^5.3.0",
		"markdown-table": "^3.0.3",
		"nanoid": "^4.0.0",
		"postgres": "^3.3.3",
		"reflect-metadata": "^0.1.13",
		"string-strip-html": "^13.0.6",
		"undici": "^5.16.0",
		"utf-8-validate": "^6.0.2",
		"zlib-sync": "^0.1.8"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.2",
		"@commitlint/config-conventional": "^17.4.2",
		"@favware/cliff-jumper": "^1.10.0",
		"@sapphire/prettier-config": "^1.4.5",
		"@sapphire/ts-config": "^3.3.4",
		"@swc/core": "^1.3.32",
		"@types/figlet": "^1.5.5",
		"@types/gradient-string": "^1.1.2",
		"@types/node": "^18.11.18",
		"@typescript-eslint/eslint-plugin": "^5.50.0",
		"@typescript-eslint/parser": "^5.50.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.33.0",
		"eslint-config-snail": "^1.4.0",
		"eslint-formatter-pretty": "^4.1.0",
		"husky": "^8.0.3",
		"ley": "^0.8.1",
		"lint-staged": "^13.1.0",
		"prettier": "^2.8.3",
		"pretty-quick": "^3.1.3",
		"tsup": "^6.5.0",
		"typescript": "^4.9.5"
	},
	"packageManager": "yarn@3.4.1",
	"engines": {
		"node": ">=18.0.0"
	}
}
