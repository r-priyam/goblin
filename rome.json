{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentSize": 4,
		"lineWidth": 120
	},
	"files": {
		"ignore": ["dist", "node_modules", ".yarn"]
	},
	"javascript": {
		"formatter": {
			"trailingComma": "none",
			"quoteStyle": "single",
			"quoteProperties": "preserve",
			"semicolons": "always"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"useSimplifiedLogicExpression": "error"
			},
			"style": {
				"noNegationElse": "error"
			}
		}
	}
}
