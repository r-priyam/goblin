{
	"root": true,
	"parserOptions": {
		"project": "./tsconfig.eslint.json"
	},
	"ignorePatterns": ["./dist/*"],
	"extends": ["snail/common", "snail/node", "snail/typescript", "snail/prettier"],
	"rules": {
		"curly": 1,
		"tsdoc/syntax": 0,
		"jsdoc/newline-after-description": 0,
		"@typescript-eslint/sort-type-union-intersection-members": 0
	}
}
